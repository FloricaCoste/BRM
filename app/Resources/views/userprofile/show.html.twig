{% extends 'base.html.twig' %}

{% block body %}
    <h1>User profile:</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userProfile.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ userProfile.userID }}</td>
            </tr>
            <tr>
                <th>Userfirstname</th>
                <td>{{ userProfile.userFirstName }}</td>
            </tr>
            <tr>
                <th>Userlastname</th>
                <td>{{ userProfile.userLastName }}</td>
            </tr>
            <tr>
                <th>Phoneno</th>
                <td>{{ userProfile.phoneNo }}</td>
            </tr>
            <tr>
                <th>Landline</th>
                <td>{{ userProfile.landLine }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ userProfile.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ userProfile.eMail }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ userProfile.status }}</td>
            </tr>
            <tr>
                <th>Lastupdate</th>
                <td>{{ userProfile.lastUpDate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('userprofile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('userprofile_edit', { 'id': userProfile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
