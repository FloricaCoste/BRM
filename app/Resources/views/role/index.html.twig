    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rOLE in rOLEs %}
            <tr>
                <td><a href="{{ path('role_show', { 'id': rOLE.id }) }}">{{ rOLE.id }}</a></td>
                <td>{{ rOLE.userROLE }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('role_show', { 'id': rOLE.id }) }}">show</a>
